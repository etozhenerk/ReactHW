{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "declaration": true,
        "plugins": [
            {
                "name": "next"
            },
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./src/components"],
            "@hooks/*": ["./src/hooks"],
            "@utils/*": ["./src/utils"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts, css.d.ts", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
